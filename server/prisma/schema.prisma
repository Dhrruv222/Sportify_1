enum UserRole {
  PLAYER
  CLUB
  AGENT
  SCOUT
  COACH
  FAN
  COMPANY
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole @default(FAN)
  createdAt DateTime @default(now())
}